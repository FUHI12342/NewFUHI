# Staging Environment Configuration
# Copy this file to .env.staging and fill in actual values

# Django Core
SECRET_KEY=your-secret-key-here
DJANGO_ENVIRONMENT=staging
ALLOWED_HOSTS=staging.newfuhi.com,your-staging-domain.com
CSRF_TRUSTED_ORIGINS=https://staging.newfuhi.com,https://your-staging-domain.com

# Database (SQLite for now, RDS-ready)
# DATABASE_URL=sqlite:///var/www/newfuhi/db.sqlite3
# DATABASE_URL=postgres://user:password@host:port/dbname

# Static Files
STATIC_ROOT=/var/www/newfuhi/static
MEDIA_ROOT=/var/www/newfuhi/media

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/newfuhi/django.log

# LINE OAuth
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_REDIRECT_URL=https://staging.newfuhi.com/auth/line/callback/
LINE_ACCESS_TOKEN=your-line-access-token

# Payment
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_URL=https://api.payment-provider.com

# Webhooks
WEBHOOK_URL_BASE=https://staging.newfuhi.com
CANCEL_URL=https://staging.newfuhi.com/cancel

# Email
DEFAULT_FROM_EMAIL=no-reply@newfuhi.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json

# LINE User ID Protection
LINE_USER_ID_ENCRYPTION_KEY=your-32-char-encryption-key-here
LINE_USER_ID_HASH_PEPPER=your-hash-pepper-string-here