# Logrotate configuration for NewFUHI staging
# Location: /etc/logrotate.d/newfuhi-staging

/var/log/newfuhi/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 newfuhi newfuhi
    postrotate
        systemctl reload newfuhi-staging
    endscript
}

/var/log/nginx/newfuhi-staging-*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 www-data www-data
    postrotate
        systemctl reload nginx
    endscript
}